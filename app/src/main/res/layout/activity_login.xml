<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".activity.LoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/largura_logo"
        android:layout_height="163dp"
        android:layout_marginTop="@dimen/margin_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_vertical"
        android:layout_marginLeft="@dimen/margin_vertical"
        android:layout_marginTop="@dimen/margin_horizontal"
        android:layout_marginEnd="@dimen/margin_vertical"
        android:layout_marginRight="@dimen/margin_vertical"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="textPersonName"
        android:text="Digite seu nome"
        android:textColor="@color/textColorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:text="Digite seu nome." />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/margin_vertical"
        android:layout_marginLeft="@dimen/margin_vertical"
        android:layout_marginTop="@dimen/margin_horizontal"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:text="+55"
        android:textColor="@color/textColorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText2"
        tools:text="+55" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/margin_vertical"
        android:layout_marginLeft="@dimen/margin_vertical"
        android:layout_marginTop="@dimen/margin_horizontal"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:text="11"
        android:textColor="@color/textColorPrimary"
        app:layout_constraintStart_toEndOf="@+id/editText4"
        app:layout_constraintTop_toBottomOf="@+id/editText2"
        tools:text="11" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="115dp"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/margin_vertical"
        android:layout_marginLeft="@dimen/margin_vertical"
        android:layout_marginTop="@dimen/margin_horizontal"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:text="999567453"
        android:textColor="@color/textColorPrimary"
        app:layout_constraintStart_toEndOf="@+id/editText5"
        app:layout_constraintTop_toBottomOf="@+id/editText2"
        tools:text="999567453" />

    <Button
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_vertical"
        android:layout_marginLeft="@dimen/margin_vertical"
        android:layout_marginTop="@dimen/margin_horizontal"
        android:layout_marginEnd="@dimen/margin_vertical"
        android:layout_marginRight="@dimen/margin_vertical"
        android:background="@color/colorPrimaryDark"
        android:text="@string/botao_cadastrar"
        android:textColor="@color/textColorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText4" />

</androidx.constraintlayout.widget.ConstraintLayout>